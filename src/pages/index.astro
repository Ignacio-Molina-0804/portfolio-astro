---
import Layout from "../layouts/Layout.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import GithubIcon from "../components/icons/GitHub.astro";
import GmailIcon from "../components/icons/Gmail.astro";
import SocialPill from "../components/SocialPill.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import BriefCase from "../components/icons/BriefCase.astro";
import CodeIcon from "../components/icons/Code.astro";
import Projects from "../components/Projects.astro";
import PersonIcon from "../components/icons/Person.astro";
import SkillsCard from "../components/SkillsCard.astro";
import ComputerIcon from "../components/icons/Computer.astro";
import Separator from "../components/Separator.astro";
import Footer from "../components/Footer.astro";
import EnvelopeIcon from "../components/icons/Envelope.astro";

import { useTranslations } from "../i18n/util";
import { languageList } from "../i18n/ui";

const currentLang = Astro.currentLocale || "es";
const t = useTranslations(currentLang as keyof typeof languageList);
---

<Layout title={t("index.title")} description={t("index.description")}>
  <main class="px-6">
    <SectionContainer id="top" class="py-20 md:py-32 pb-24 md:pb-36">
      <SectionContainer id="top" class="py-20 md:py-32 pb-24 md:pb-36">
        <div
          class="flex flex-col md:flex-row justify-center items-center gap-8 md:gap-10 lg:gap-12 px-4 sm:px-6"
        >
          <!-- Imagen de perfil con ajustes responsive -->
          <div class="flex-shrink-0">
            <img
              class="rounded-full w-40 h-40 sm:w-48 sm:h-48 md:w-52 md:h-52 lg:w-56 lg:h-56 mx-4 md:mx-6 lg:mx-10 border-2 border-amber-500/20 shadow-lg"
              src="data/img-perfil.webp"
              alt="Foto de Perfil de Ignacio Molina"
            />
          </div>

          <!-- Contenido de texto -->
          <div class="text-center md:text-left max-w-2xl">
            <div set:html={t("top.content")} />

            <!-- Redes sociales (sin cambios como solicitaste) -->
            <nav
              class="flex justify-center md:justify-start flex-wrap gap-6 mt-6 md:mt-8"
            >
              <ul>
                <li class="flex flex-wrap justify-center gap-4">
                  <SocialPill
                    class="hover:bg-blue-800"
                    href="https://www.linkedin.com/in/ignacio-ezequiel-molina-granda-2a2aa6272/"
                  >
                    <LinkedInIcon class="size-4 lg:size-6 mr-1" />LinkedIn
                  </SocialPill>

                  <SocialPill
                    class="hover:bg-black"
                    href="https://github.com/Ignacio-Molina-0804"
                  >
                    <GithubIcon class="size-4 lg:size-6 mr-1" />Github
                  </SocialPill>

                  <SocialPill
                    class="hover:bg-red-800"
                    href="https://mail.google.com/mail/?view=cm&fs=1&to=ignaciomolina.dev@gmail.com"
                  >
                    <GmailIcon class="size-4 lg:size-6 mr-1" /> ignaciomolina.dev@gmail.com
                  </SocialPill>
                </li>
              </ul>
            </nav>
          </div>
        </div>
      </SectionContainer>

      <SectionContainer id="experiencia">
        <h2
          class="text-gray-800 dark:text-white text-2xl font-semibold mb-6 flex gap-x-3 items-center"
        >
          <BriefCase class="text-gray-800 dark:text-white size-7" />
          {t("experience.title")}
        </h2>
        <Experience />
        <Separator />
      </SectionContainer>

      <SectionContainer id="proyectos">
        <h2
          class="text-gray-800 dark:text-white text-2xl font-semibold mb-6 flex gap-x-3 items-center"
        >
          <ComputerIcon class="text-gray-800 dark:text-white size-7" />
          {t("projects.title")}
        </h2>
        <Projects />
        <Separator />
      </SectionContainer>

      <SectionContainer id="sobre-mi">
        <h2
          class="text-gray-800 dark:text-white text-2xl font-semibold mb-6 flex gap-x-3 items-center"
        >
          <PersonIcon class="text-gray-800 dark:text-white size-7" />
          {t("aboutme.title")}
        </h2>

        <div set:html={t("aboutme.content")} />

        <Separator />
      </SectionContainer>

      <SectionContainer id="conocimientos">
        <h2
          class="text-gray-800 dark:text-white text-2xl font-semibold mb-2 flex gap-x-3 items-center"
        >
          <CodeIcon class="text-gray-800 dark:text-white size-7" />
          {t("skills.title")}
        </h2>
        <SkillsCard />
        <Separator />
      </SectionContainer>

      <SectionContainer id="contacto" class="text-center">
        <h2
          class="text-gray-800 dark:text-white text-3xl font-bold mb-8 flex justify-center gap-x-3 items-center"
        >
          <EnvelopeIcon class="text-gray-800 dark:text-white size-8" /> {t("contact.title")}
          <EnvelopeIcon class="text-gray-800 dark:text-white size-8" />
        </h2>

        <div set:html={t("contact.content")} />

        <!-- Contenedor de botones de contacto -->
        <div class="flex flex-wrap justify-center gap-6 mb-12">
          <!-- LinkedIn -->
          <a
            href="https://www.linkedin.com/in/ignacio-ezequiel-molina-granda-2a2aa6272/"
            target="_blank"
            class="flex items-center gap-2 px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-all shadow-lg hover:shadow-xl"
          >
            <LinkedInIcon class="size-6" />
            <span class="font-medium">LinkedIn</span>
          </a>

          <!-- GitHub -->
          <a
            href="https://github.com/Ignacio-Molina-0804"
            target="_blank"
            class="flex items-center gap-2 px-6 py-3 bg-gray-800 hover:bg-gray-900 text-white rounded-lg transition-all shadow-lg hover:shadow-xl"
          >
            <GithubIcon class="size-6" />
            <span class="font-medium">GitHub</span>
          </a>

          <!-- Email -->
          <a
            href="mailto:ignaciomolina.dev@gmail.com"
            class="flex items-center gap-2 px-6 py-3 bg-red-600 hover:bg-red-700 text-white rounded-lg transition-all shadow-lg hover:shadow-xl"
          >
            <GmailIcon class="size-6" />
            <span class="font-medium">Email</span>
          </a>
        </div>
      </SectionContainer>
    </SectionContainer>

    <Footer />
  </main>
</Layout>
