---
import AstroIcon from "./icons/Astro.astro";
import JavaScriptIcon from "./icons/JavaScript.astro";
import TypeScriptIcon from "./icons/TypeScript.astro";
import TailwindIcon from "./icons/TailwindCSS.astro";
import GithubIcon from "./icons/GitHub.astro";
import EnterIcon from "./icons/Enter.astro";
import ReactIcon from "./icons/React.astro";
import ReduxIcon from "./icons/Redux.astro";
import JavaIcon from "./icons/Java.astro";
import SpringIcon from "./icons/SpringBoot.astro";
import PostgresIcon from "./icons/Postgres.astro";
import Postgres from "./icons/Postgres.astro";
import HTMLIcon from "./icons/HTML.astro";
import CSSIcon from "./icons/CSS.astro";
import VSCodeIcon from "./icons/VisualStudioCode.astro";
import BrunoIcon from "./icons/Bruno.astro";
import GitIcon from "./icons/Git.astro";
import TrelloIcon from "./icons/Trello.astro";
import JiraIcon from "./icons/Jira.astro";
import FigmaIcon from "./icons/Figma.astro";
import MySQLIcon from "./icons/MySQL.astro";
import JPAIcon from "./icons/JPA.astro";




const SKILLS = [
  {
    title: "Backend Development",
    techIcons: [
      {
        icon: JavaIcon,
        name: "Java",
      },
      {
        icon: SpringIcon,
        name: "Spring Boot",
      },
      {
        icon: PostgresIcon,
        name: "PostgreSQL",
      },
      {
        icon: MySQLIcon,
        name: "MySQL",
      },
      {
        icon: JPAIcon,
        name: "JPA",
      },
    ],
  },
  {
    title: "Frontend Development",
    techIcons: [
      {
        icon: AstroIcon,
        name: "Astro",
      },
      {
        icon: HTMLIcon,
        name: "HTML",
      },
      {
        icon: CSSIcon,
        name: "CSS",
      },
      {
        icon: JavaScriptIcon,
        name: "JavaScript",
      },
      {
        icon: TypeScriptIcon,
        name: "TypeScript",
      },
      {
        icon: TailwindIcon,
        name: "Tailwind CSS",
      },
    ],
  },
  {
    title: "Herramientas",
    techIcons: [
      {
        icon: VSCodeIcon,
        name: "Visual Studio Code",
      },
      {
        icon: BrunoIcon,
        name: "Bruno",
      },
      {
        icon: GitIcon,
        name: "Git",
      },
      {
        icon: TrelloIcon,
        name: "Trello",
      },
      {
        icon: JiraIcon,
        name: "Jira",
      },
      {
        icon: FigmaIcon,
        name: "Figma",
      },
    ],
  },
];
---

<section class="grid gap-6 md:grid-cols-3 px-4 py-5 text-white">
  {
    SKILLS.map(({ title, techIcons }) => (
      <div class="group rounded-xl border border-transparent bg-[#0f172a] p-6 shadow-md hover:shadow-blue-500/20 hover:border-blue-400 transition-all duration-300 transform hover:-translate-y-1">
        <h3 class="text-xl font-semibold mb-4 text-white">{title}</h3>
        <ul class="space-y-3">
          {techIcons.map(({ icon: Icon, name }) => (
            <li
              class={`flex items-center justify-between bg-[#1e293b] px-4 py-2 rounded-lg transition-colors duration-200 group-hover:bg-[#334155]`}
            >
              <span>{name}</span>
              <Icon />
            </li>
          ))}
        </ul>
      </div>
    ))
  }
</section>
