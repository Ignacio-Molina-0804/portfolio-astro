---

import SolIcon from "./icons/Sol.astro";
import LunaIcon from "./icons/Luna.astro";
import InstallIcon from "./icons/Install.astro";

---

<header class="fixed top-0 left-0 w-full z-50 bg-gray-500/70 dark:bg-black/70 backdrop-blur-md">
  <div class="flex justify-between items-center w-full max-w-[1200px] mx-auto py-3 px-4 sm:py-4 md:py-5 lg:py-6">
    <!-- Contenedor de navegaci칩n flexible -->
    <nav class="flex flex-nowrap items-center gap-1 sm:gap-2 md:gap-4 lg:gap-6 xl:gap-8 overflow-x-auto py-2 scrollbar-hide">
      <!-- Enlaces con tama침os responsive -->
      <a class="text-white hover:text-blue-200 transition-colors duration-200 text-xs sm:text-sm md:text-base whitespace-nowrap px-1 sm:px-2" href="#top">Inicio</a>
      <a class="text-white hover:text-blue-200 transition-colors duration-200 text-xs sm:text-sm md:text-base whitespace-nowrap px-1 sm:px-2" href="#experiencia">Experiencia</a>
      <a class="text-white hover:text-blue-200 transition-colors duration-200 text-xs sm:text-sm md:text-base whitespace-nowrap px-1 sm:px-2" href="#proyectos">Proyectos</a>
      <a class="text-white hover:text-blue-200 transition-colors duration-200 text-xs sm:text-sm md:text-base whitespace-nowrap px-1 sm:px-2" href="#sobre-mi">Sobre Mi</a>
      <a class="text-white hover:text-blue-200 transition-colors duration-200 text-xs sm:text-sm md:text-base whitespace-nowrap px-1 sm:px-2" href="#conocimientos">Conocimientos</a>
      <a class="text-white hover:text-blue-200 transition-colors duration-200 text-xs sm:text-sm md:text-base whitespace-nowrap px-1 sm:px-2" href="#contacto">Contacto</a>
      
      <!-- Bot칩n de CV con ajustes responsive -->
      <a
        href="/cv.pdf"
        download="CV-Ignacio-Molina-Desarrollador.pdf"
        class="ml-1 sm:ml-2 px-2 sm:px-3 py-1 sm:py-1.5 bg-transparent border border-amber-400 text-amber-400 hover:bg-amber-400/10 rounded-md transition-all duration-300 flex items-center gap-1 group whitespace-nowrap"
      >
        <InstallIcon/>
        <span class="text-xs sm:text-sm font-medium">CV</span>
      </a>
    </nav>

    <!-- Bot칩n de tema con ajustes responsive -->
    <button
      id="theme-toggle"
      class="ml-2 sm:ml-4 p-1 sm:p-1.5 md:p-2 rounded-full bg-gray-700 hover:bg-gray-600 transition-all duration-300 group"
      aria-label="Cambiar modo claro/oscuro"
      title="Cambiar tema"
    >
      <div class="relative w-4 h-4 sm:w-5 sm:h-5">
        <!-- Sol - visible en modo claro -->
        <SolIcon/>
        <!-- Luna - visible en modo oscuro -->
        <LunaIcon/>
      </div>
    </button>
  </div>
</header>

<script>
  import "/src/scripts/ChangeMode.ts";
</script>