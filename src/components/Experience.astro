---
import ExperienceItem from "./ExperienceItem.astro";

import { useTranslations } from "../i18n/util";
import { languageList } from "../i18n/ui";

const currentLang = Astro.currentLocale || "es";
const t = useTranslations(currentLang as keyof typeof languageList);

const EXPERIENCIE = [
  {
    date: t("experience.item.date"),
    title: t("experience.item.title"),
    description:
      t("experience.item.description"),
    link: "https://gastonmolinaguide.netlify.app",
  },


  {
    date: t("experience.item.date2"),
    title: t("experience.item.title2"),
    description: t("experience.item.description2"),
    // link: "#contacto",
    // tagline: "Disponible para colaboraciones inmediatas"
  }

];
---

<ol class="relative border-s border-gray-200 dark:border-gray-700 justify-center">
  {
    EXPERIENCIE.map((experiencie) => (
      <li class="mb-10 ms-4">
        <ExperienceItem {...experiencie} />
      </li>
    ))
  }
</ol>
